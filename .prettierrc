{
  "printWidth": 80,
  "tabWidth": 2,
  "singleQuote": false,
  "trailingComma": "none",
  "jsxBracketSameLine": true,
  "noSemi": true,
  "parser": "babylon",
  "overrides": [
    {
      "files": ["*.md", "*.json"],
      "options": { "parser": "json" }
    },
    {
      "files": "*.tsx",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": [".prettierrc", ".babelrc"],
      "options": { "parser": "json" }
    }
  ]
}
